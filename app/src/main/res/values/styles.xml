<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="NewApi">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppTheme.AppbarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="icon">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
    </style>

    <style name="icon.left" parent="icon">
        <item name="android:layout_gravity">top|left</item>
        <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
    </style>

    <style name="icon.right" parent="icon">
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
        <item name="android:layout_marginRight">@dimen/spacing_medium_32</item>
    </style>

    <style name="list_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small_8</item>
        <item name="android:layout_marginTop">@dimen/spacing_small_8</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="list_item_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_size</item>
        <item name="android:background">@color/color_gray_light</item>
    </style>
    
    <style name="profile_list_item_divider" parent="list_item_divider">
        <item name="android:layout_marginLeft">@dimen/spacing_larger_72</item>
    </style>

    <style name="list_item_information">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/size_large_72</item>
        <item name="android:layout_marginLeft">@dimen/spacing_medium_32</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal_16</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">bottom</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="list_item_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:enabled">false</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textColorHint">@color/color_gray</item>
        <item name="android:focusable">false</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="summary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_large_112</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/color_gray</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="summary_divider">
        <item name="android:layout_width">@dimen/line_size</item>
        <item name="android:layout_height">@dimen/size_medium_56</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@color/color_gray_light</item>
    </style>

    <style name="summary_block">
        <item name="android:layout_height">@dimen/size_medium_56</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal_16</item>
        <item name="android:layout_width">@dimen/size_medium_56</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">bottom</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="summary_block.left">
        <item name="android:layout_gravity">center_vertical|left</item>
    </style>

    <style name="summary_block.right">
        <item name="android:layout_gravity">center_vertical|right</item>
    </style>

    <style name="summary_block.center">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="summary_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:enabled">false</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:focusable">false</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/text_28sp</item>
    </style>

    <style name="summary_description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_smallest_16</item>
        <item name="android:enabled">false</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:focusable">false</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/text_12sp</item>
    </style>

    <style name="custom_dialog">
        <item name="android:fullDark">@android:color/transparent</item>
    </style>


    <style name="drawer_main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_largest_172</item>
        <item name="android:paddingTop">@dimen/spacing_medial_24</item>
        <item name="android:paddingRight">@dimen/spacing_normal_16</item>
        <item name="android:paddingLeft">@dimen/spacing_normal_16</item>
        <item name="android:paddingBottom">@dimen/spacing_small_8</item>
        <item name="android:background">@drawable/user_bg</item>
    </style>

    <style name="drawer_avatar">
        <item name="android:layout_width">@dimen/profile_avatar_size</item>
        <item name="android:layout_height">@dimen/profile_avatar_size</item>
        <item name="android:src">@drawable/avatar</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal_16</item>
    </style>


    <style name="drawer_user_info">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/text_14sp</item>
    </style>

    <style name="drawer_user_info.group">
        <item name="android:layout_height">@dimen/size_medium_56</item>
        <item name="android:layout_alignParentBottom">true</item>
        <!--item name="android:background">@color/color_primary_dark</item-->
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="drawer_user_info.name">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="drawer_user_info.email">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="user_photo_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/profile_image_size</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/header_bg</item>
    </style>

    <style name="login_inside_block">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/spacing_medial_24</item>
        <item name="android:paddingRight">@dimen/spacing_medial_24</item>
        <item name="android:paddingBottom">@dimen/spacing_medial_24</item>

    </style>

    <style name="login_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/spacing_medial_28</item>
        <item name="android:layout_marginRight">@dimen/spacing_medial_28</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal_16</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:text">Забыли пароль?</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/color_gray_light</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_14sp</item>
    </style>

    <style name="AppTheme.Button.Red" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal_16</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:minWidth">126dp</item>
        <item name="android:paddingTop">@dimen/spacing_normal_14</item>
        <item name="android:paddingBottom">@dimen/spacing_normal_14</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:background">@color/color_red</item>
        <item name="android:textSize">@dimen/text_14sp</item>
    </style>

    <style name="login_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small_8</item>
        <item name="android:layout_marginTop">@dimen/spacing_small_8</item>
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_20sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="login_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:enabled">true</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textColorHint">@color/color_gray</item>
        <item name="android:focusable">true</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal_16</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/color_white</item>
        <item name="android:textColorSecondary">@color/color_white</item>
        <item name="android:actionMenuTextColor">@color/color_white</item>
    </style>

</resources>
